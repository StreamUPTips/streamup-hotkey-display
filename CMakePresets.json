{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 18,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": true,
        "CMAKE_INSTALL_MESSAGE": "LAZY"
      }
    },
    {
      "name": "macos-base",
      "hidden": true,
      "inherits": [
        "base"
      ],
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      },
      "generator": "Xcode",
      "binaryDir": "${sourceDir}/build_macos",
      "cacheVariables": {
        "CMAKE_OSX_ARCHITECTURES": "arm64;x86_64",
        "CMAKE_OSX_DEPLOYMENT_TARGET": "11.0"
      }
    },
    {
      "name": "macos-ci",
      "displayName": "macOS (CI)",
      "description": "CI configuration for macOS builds",
      "inherits": [
        "macos-base"
      ],
      "warnings": {
        "dev": true,
        "deprecated": true
      },
      "cacheVariables": {
        "ENABLE_CCACHE": true,
        "CMAKE_COMPILE_WARNING_AS_ERROR": true
      }
    },
    {
      "name": "ubuntu-x86_64",
      "displayName": "Ubuntu x86_64",
      "description": "Ubuntu build using Ninja",
      "inherits": [
        "base"
      ],
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build_x86_64",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "CMAKE_INSTALL_PREFIX": "/usr",
        "CMAKE_PREFIX_PATH": "$penv{CMAKE_PREFIX_PATH}"
      }
    },
    {
      "name": "ubuntu-ci-x86_64",
      "displayName": "Ubuntu x86_64 (CI)",
      "description": "CI configuration for Ubuntu builds",
      "inherits": [
        "ubuntu-x86_64"
      ],
      "warnings": {
        "dev": true,
        "deprecated": true
      },
      "cacheVariables": {
        "ENABLE_CCACHE": true,
        "CMAKE_COMPILE_WARNING_AS_ERROR": true
      }
    },
    {
      "name": "windows-x64",
      "displayName": "Windows x64",
      "description": "Windows build using Visual Studio 2022",
      "inherits": [
        "base"
      ],
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "generator": "Visual Studio 17 2022",
      "binaryDir": "${sourceDir}/build_x64",
      "architecture": "x64",
      "cacheVariables": {
        "CMAKE_SYSTEM_VERSION": "10.0.20348.0"
      }
    },
    {
      "name": "windows-ci-x64",
      "displayName": "Windows x64 (CI)",
      "description": "CI configuration for Windows builds",
      "inherits": [
        "windows-x64"
      ],
      "warnings": {
        "dev": true,
        "deprecated": true
      },
      "cacheVariables": {
        "CMAKE_COMPILE_WARNING_AS_ERROR": true
      }
    }
  ],
  "buildPresets": [
    {
      "name": "ubuntu-x86_64",
      "displayName": "Ubuntu x86_64",
      "configurePreset": "ubuntu-x86_64"
    },
    {
      "name": "ubuntu-ci-x86_64",
      "displayName": "Ubuntu x86_64 (CI)",
      "configurePreset": "ubuntu-ci-x86_64",
      "configuration": "RelWithDebInfo"
    },
    {
      "name": "windows-x64",
      "displayName": "Windows x64",
      "configurePreset": "windows-x64",
      "configuration": "RelWithDebInfo"
    },
    {
      "name": "windows-ci-x64",
      "displayName": "Windows x64 (CI)",
      "configurePreset": "windows-ci-x64",
      "configuration": "RelWithDebInfo"
    }
  ]
}
